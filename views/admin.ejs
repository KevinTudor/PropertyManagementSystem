                    <label class="form-label" for="typeEmailX"></label><button" style="background-color: aqua;" type="submit">SUBMIT</button></div>\
                </i>
            </a>
        </td>`
        var hid_inv = true;
        // Append table with add row form on add new button click
        $(".add-new").click(function(){
            $(this).attr("disabled", "disabled");
            var index = $("table tbody tr:last-child").index();
            var row = '<tr>' +
                '<td><input type="date" class="form-control" name="dateOfPurchase" id="dateOfPurchase"></td>' +
                '<td><input type="text" class="form-control" name="price" placeholder="$0" id="price"></td>' +
                '<td><input type="text" class="form-control" name="address" placeholder="address" id="Address"></td>' +
                '<td><input type="text" class="form-control" name="zipCode" placeholder="00000" id="zipCode"></td>' +
                actions +
            '</tr>';
            $("table").append(row);		
            $("table tbody tr").eq(index + 1).find(".add, .edit").toggle();
            $('[data-toggle="tooltip"]').tooltip();
        });
        // Add row on add button click
        $(".add").on("click", function(){
            var empty = false;
            var input = $(this).parents("tr").find('input[type="text"]');
            var inputDate = $(this).parents("tr").find('input[type="date"]');
            input.each(function(){
                if(!$(this).val()){
                    $(this).addClass("error");
                    empty = true;
                    $(this).addAttr("disabled");
                } else{
                    $(this).removeClass("error");
                }
            });
            inputDate.each(function(){
                if(!$(this).val()){
                    $(this).addClass("error");
                    empty = true;
                } else{
                    $(this).removeClass("error");
                }

                if(!$(this).hasAttribute('disabled')) {
                    $(this).addAttr('disabled');
                }
            });
            $(this).parents("tr").find(".error").first().focus();
                /*input.each(function(){
                    $(this).parent("td").html($(this).val());
                });	
                inputDate.each(function(){
                    $(this).parent("td").html($(this).val());
                });*/	
                $(this).parents("tr").find(".add, .edit").toggle();
                $(".add-new").removeAttr("disabled");	
        });
        // Edit row on edit button click
        $(".edit").on("click", function(){		
            $(this).parents("tr").find("input:first-child").each(function(){
                $(this).html('<input type="date" class="form-control" value="' + $(this).text() + '">').removeAttr("disabled");
            });	
            
            $(this).parents("tr").find("input:not(:first-child):not(:last-child)").each(function(){
                $(this).html('<input type="text" class="form-control" value="' + $(this).text() + '">').removeAttr("disabled");
            });		
            $(this).parents("tr").find(".add, .edit").toggle();
            $(".add-new").attr("disabled", "disabled");
        });
        // Delete row on delete button click
        /*$(".delete").on("click", function(){
            if (confirm("Are you sure to execute this action?")){
                $(this).tooltip('hide');
                $(this).parents("tr").remove();
                $(".add-new").removeAttr("disabled");
                $(this).parents("tr").find(".add, .delete").toggle();
                $(this).parent('form').trigger('submit');
            } 
        });*/

        // Print Table
        $(document).on('click', '.print', function(){
            var table = document.getElementById("dataTable");
            var htmlToPrint = '' +
                '<style type="text/css">' +
                'table th, table td {' +
                'border:1px solid #000;' +
                'padding:0.5em;' +
                '}' +
                '</style>';
            newWin = window.open('placeholder');
            newWin.document.write(table.outerHTML);
            newWin.document.write('<html><head><title>Admin Table</title>...');
            newWin.document.write('<style type="text/css">\
                @media print {\
                    #dataTable {\
                        font-size: 18px;\
                    } \
                    .table th{\
                        border:1px solid #000;\
                        padding:0.5em;\
                        text-align: center;\
                    }\
                    .table td {\
                        border:1px solid #000;\
                        padding:0.5em;\
                        text-align: right;\
                    }\
                    .noprint {\
                        display:none;\
                    }\
                }</style>');
            newWin.print();
            newWin.close();
        })

        // search bar
        $(document).ready(function(){
            $("#search").on("keyup", function() {
                var value = $(this).val().toLowerCase();
                $(".properties").filter(function() {
                    var x = $(this)[0].children[4].children.address.value;
                    $(this).toggle(x.toLowerCase().indexOf(value) > -1);
                });
            });
        });
        
        $(document).ready(function(){
            $("#searchuser").on("keyup", function() {
                var value = $(this).val().toLowerCase();
                $(".properties").filter(function() {
                    var y = $(this)[0].children[1].children.username.value;
                    $(this).toggle(y.toLowerCase().indexOf(value) > -1);
                });
            });
        });

        searchInput.addEventListener('keyup', () =>{
            clearTimeout(typingTimer);
            typingTimer = setTimeout(liveSearch, typeInterval);
        });

        $(document).on("click", ".person_add", function(){
            if (hid_inv){
                console.log(true);
                hid_inv= false;
                document.getElementById("dia_shr").style.display = "block";
            }else{
                console.log(false)
                hid_inv=true;
                document.getElementById("dia_shr").style.display = "hidden";
            }
        });
    });
</script>

