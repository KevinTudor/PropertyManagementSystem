<script>

    $(document).ready(function(){
        $('[data-toggle="tooltip"]').tooltip();
        var actions = `<td>
            <button class="add" type="submit" formaction="/dashboard/add" title="Done" data-toggle="tooltip"><i class="material-icons">&#xE03B;</i></button>
            <button class="edit" type="button" title="Edit" data-toggle="tooltip"><i class="material-icons">&#xE254;</i></button>
